	depends on DECON_LCD
	tristate "Support HMT display"
	default n

config LCD_ALPM
	depends on DECON_LCD
	tristate "Support ALPM mode"
	default n

config LCD_PCD
	depends on DECON_LCD
	tristate "Support PCD detection"
	default n

